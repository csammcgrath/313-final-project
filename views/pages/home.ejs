            //     <li id="videoInfo${num}" class="list-group-item d-flex justify-content-between align-items-center">
            //         <input id="videoInfo" type="hidden" value="<%= obj.deets %>" />
            //         ${obj.title}
            //     </li>
            // `);
        });
    </script>
