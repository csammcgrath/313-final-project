    <script>
        //expose the io object global
        var socket = io();
        const apiKey = 'AIzaSyC0ceLDZ-7tIf5Ba5SvqVI8gLYq-1rp7ks'; //restricted to only my website to use the YT api. nice try :)

        // Load the IFrame Player API code asynchronously.
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/player_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // Replace the 'ytplayer' element with an <iframe> and
        // YouTube player after the API code downloads.
        var player;
        function onYouTubePlayerAPIReady() {
            player = new YT.Player('ytplayer', {
                height: '360',
                width: '640',
                videoId: 'dQw4w9WgXcQ',
                playerVars: {
                    controls: 0,
                    disablekb: 1,
                    rel: 0,
                },
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        // 4. The API will call this function when the video player is ready.
        function onPlayerReady(event) {
            progressBar();
        }

        // 5. The API calls this function when the player's state changes.
        var done = false;
        function onPlayerStateChange(event) {}

        function playVideo() {
            player.playVideo();
        }

        function stopVideo() {
            player.pauseVideo();
        }

        function seekTo(time) {
            player.seekTo(time);
        }

        function progressBar() {
            let pg = $('#line');
            let sq = $('#square');

            setInterval(() => {
                //progress
                let frac = (player.getCurrentTime() / player.getDuration()) * 100

                sq.css('left', `${frac}%`);
            }, 250);
        }

        $('#playVideoBtn').click(e => {
            e.preventDefault();

            let videoData = {
                state: 'play',
                time: player.getCurrentTime()
            }

            socket.emit('video', videoData);
        });

        $('#stopVideoBtn').click(e => {
            e.preventDefault();

            let videoData = {
                state: 'pause',
                time: player.getCurrentTime()
            }

            socket.emit('video', videoData);
        });

        $('#addVideoBtn').click(e => {
            e.preventDefault();

            let videoLink = $('#videoLink').val();

            let rgx = /^(https?\:\/\/)?((www\.)?youtube\.com|youtu\.?be)\/.+$/g;

            if (rgx.test(videoLink)) {
                //we know it is a youtube link so let's grab the video id from the link and make an api call
                videoLink = youtube_parser(videoLink);

                //get info from the api
                $.get(`https://www.googleapis.com/youtube/v3/videos?id=${videoLink}&key=${apiKey}&part=snippet`, (data) => {
                    let shortTitle = data.items[0].snippet.title.substr(0, 25);

                    let obj = {
                        title: shortTitle,
                        deets: data.items[0]
                    }

                    socket.emit('videoList', obj);

                    console.log('Obj main: ', obj);
                });
            }
        });

        //credit: https://stackoverflow.com/a/8260383
        function youtube_parser(url) {
                let regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#\&\?]*).*/;
                let match = url.match(regExp);
                return (match && match[7].length == 11) ? match[7] : false;
            }

        $('#line').click(e => {
            e.preventDefault();

            let os = $('#line').offset();
            
            let updateTime = (e.pageX - os.left) / 445 * player.getDuration();

            let obj = {
                state: 'play',
                time: updateTime
            };

            socket.emit('video', obj);

            console.log(updateTime);
        });

        //draggable
        $('#square').draggable({
            axis: 'x',
            containment: '#line',
            drag: e => {
                let offset = $('#square').offset();

                let updateTime = (e.pageX - offset.left) / 445 * player.getDuration();

                let obj = {
                    state: 'play',
                    time: updateTime
                };

                socket.emit('video', obj);

                console.log(`New time: `, updateTime);
            }
        });

        socket.on('video', obj => {
            if (obj.state === 'play') {
                console.log('Play button hit');
                console.log(`Time: ${player.getCurrentTime()}`);

                if (Math.abs(obj.time - player.getCurrentTime()) > 1) {
                    seekTo(obj.time);
                }

                playVideo();
            } else if (obj.state === 'pause') {
                console.log('Stop button hit');
                console.log(`Time: ${player.getCurrentTime()}`);
                stopVideo();
            }
        });

        socket.on('videoList', obj => {
            // console.log('Obj: ', obj);
