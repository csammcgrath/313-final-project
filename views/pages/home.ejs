    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        //expose the io object global
        var socket = io();
        // Load the IFrame Player API code asynchronously.
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/player_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // Replace the 'ytplayer' element with an <iframe> and
        // YouTube player after the API code downloads.
        var player;
        function onYouTubePlayerAPIReady() {
            player = new YT.Player('ytplayer', {
                height: '360',
                width: '640',
                videoId: 'dQw4w9WgXcQ',
                playerVars: {
                    controls: 0,
                    disablekb: 1,
                    rel: 0,
                },
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        // 4. The API will call this function when the video player is ready.
        function onPlayerReady(event) {

}

        // 5. The API calls this function when the player's state changes.
        //    The function indicates that when playing a video (state=1),
        //    the player should play for six seconds and then stop.
        var done = false;
        function onPlayerStateChange(event) {
            // if (event.data == YT.PlayerState.PLAYING && !done) {
            //     setTimeout(stopVideo, 6000);
            //     done = true;
            // }
        }

        function playVideo() {
            player.playVideo();
        }

        function stopVideo() {
            player.pauseVideo();
        }

        $('#playVideoBtn').click(e => {
            e.preventDefault();
            // playVideo();
            let videoData = {
                state: 'play',
                time: player.getCurrentTime()
            }

            socket.emit('video', videoData);
        });

        $('#stopVideoBtn').click(e => {
            e.preventDefault();

            
            // stopVideo();
            let videoData = {
                state: 'pause',
                time: player.getCurrentTime()
            }

            socket.emit('video', videoData);
        });

        socket.on('video', obj => {
            if (obj.state === 'play') {
                console.log('Play button hit');
                console.log(`Time: ${player.getCurrentTime()}`);
                playVideo();
            } else if (obj.state === 'pause') {
                console.log('Stop button hit');
                console.log(`Time: ${player.getCurrentTime()}`);
                stopVideo();
            }
        })
    </script>
    <script src="js/chat.js"></script>
</body>

</html>