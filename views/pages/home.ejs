                        <ul class="chat" id="chatroom">
                            <li>

                            </li>
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input id="userInput" type="text" class="form-control input-sm" placeholder="Enter your message here" />
